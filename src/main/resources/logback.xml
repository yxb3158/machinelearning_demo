<configuration debug="false">

    <property name="LOG_HOME" value="logs" />
    <property name="app.key" value="waimai_c_service_cdata_server" />

    <conversionRule conversionWord="exception"
                    converterClass="com.meituan.scribe.logback.ReplaceExceptionConverter" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d [%thread] %-5level [%F:%L] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 按照每天生成日志文件 -->
    <appender name="file"  class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${app.key}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/${app.key}.log.%d{yyyy-MM-dd-HH}</FileNamePattern>
            <!--日志文件保留个数-->
            <MaxHistory>72</MaxHistory>
        </rollingPolicy>
        <encoder>
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d [%thread] %-5level [%F:%L] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="jmonitorappender"  class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${app.key}.jmonitor.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/${app.key}.jmonitor.log.%d{yyyy-MM-dd}</FileNamePattern>
            <!--日志文件保留天数-->
            <MaxHistory>7</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d [%thread] %-5level [%F:%L] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="jmonitorlogstoreappender"  class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${app.key}.jmonitor.logstore.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/${app.key}.jmonitor.logstore.log.%d{yyyy-MM-dd}</FileNamePattern>
            <!--日志文件保留天数-->
            <MaxHistory>7</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d [%thread] %-5level [%F:%L] %msg%n</pattern>
        </encoder>
    </appender>
    <!-- 3rdparty Loggers -->
    <logger name="org.springframework.core">
        <level value="info" />
    </logger>

    <logger name="org.springframework.beans">
        <level value="info" />
    </logger>

    <logger name="org.springframework.context">
        <level value="info" />
    </logger>

    <logger name="org.springframework.web">
        <level value="info" />
    </logger>

    <logger name="com.taobao.tair3" additivity="false">
        <level value="error"/>
        <appender-ref ref="file" />
    </logger>

    <logger name="jmonitor" additivity="false">
        <level value="info" />
        <appender-ref ref="jmonitorappender" />
    </logger>

    <logger name="jmonitorlogstore" additivity="false">
        <level value="info" />
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- 日志输出级别 -->
    <root>
        <level value="info" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>